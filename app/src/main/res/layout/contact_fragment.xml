<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contact.Contact">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button_telegram_contact"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="157dp"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/telegram_icon"
             />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button_email_contact"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="52dp"
            android:text="Button"
            app:icon="@drawable/gmail_icon"
            app:layout_constraintBottom_toTopOf="@+id/text_privacy"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="71dp"
            android:text="Жалобы идеи предложения"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Missclick Corporation\nВсе права защищены"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_telegram_contact" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>